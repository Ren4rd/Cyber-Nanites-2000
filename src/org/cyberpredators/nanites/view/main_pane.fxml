<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.cyberpredators.nanites.view.NanitesGridPane?>

<fx:root
		type="javafx.scene.layout.BorderPane"
		xmlns:fx="http://javafx.com/fxml">
	<top>
		<MenuBar>
			<menus>
				<Menu text="File">
					<items>
						<MenuItem text="Load a mod" onAction="#loadMod" accelerator="CTRL+L" />
						<MenuItem text="Exit" onAction="#quitApplication" accelerator="CTRL+W" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<center>
		<NanitesGridPane fx:id="nanitesGridPane" />
	</center>
</fx:root>